{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Interactive line chart for export percentages of commodities over time with tooltips.",
    "title": {
        "text": "Chart 2: Top Export Commodities Percentage Over Time",
        "subtitle": "Interactive line chart with year filter and tooltips",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "middle",
        "color": "black"
    },
    "width": 600,
    "height": 400,
    "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 2,
        "opacity": 1
    },
    "data": {
        "url": "https://raw.githubusercontent.com/ariefanwar07/ariefanwar07.github.oi/refs/heads/main/project_data_top_6_export_commodities_percentage.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "calculate": "substring(datum.Year, 0, 4)",
            "as": "year"
        },
        {
            "calculate": "replace(datum['export Percentage'], '%', '')",
            "as": "exportPercentage"
        },
        {
            "calculate": "toNumber(datum.exportPercentage) / 100",
            "as": "percentage"
        },
        {
            "filter": "datum.year >= minYear && datum.year <= maxYear"
        }
    ],
    "params": [
        {
            "name": "minYear",
            "value": 2011,
            "bind": {
                "input": "range",
                "min": 2011,
                "max": 2022,
                "step": 1,
                "name": "Start year:"
            }
        },
        {
            "name": "maxYear",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2011,
                "max": 2022,
                "step": 1,
                "name": "End year:"
            }
        }
    ],
    "encoding": {
        "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "percentage",
            "type": "quantitative",
            "title": "Export Percentage",
            "axis": {
                "format": ".0%"
            }
        },
        "color": {
            "field": "HS Description",
            "type": "nominal",
            "title": "Commodity"
        },
        "tooltip": [
            {
                "field": "year",
                "type": "ordinal",
                "title": "Year"
            },
            {
                "field": "HS Description",
                "type": "nominal",
                "title": "Commodity"
            },
            {
                "field": "percentage",
                "type": "quantitative",
                "title": "Export Percentage",
                "format": ".2%"
            }
        ]
    },
  "selection": {
    "zoom": {
      "type": "interval",
      "bind": "scales"
    }
  }
}
