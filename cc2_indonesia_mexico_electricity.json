{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Indonesia and Mexico Electricity",
      "anchor": "start",
      "subtitle": "Rate, % | Source: ECO API",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "height": 250,
    "width": "400",
    "autosize": {"type": "fit", "contains": "padding"},
    "background": "#ffffff",
    "view": {"fill": "#ffffff", "strokeOpacity": 0},
    "layer": [
      {
        "data": {
          "url": "https://api.economicsobservatory.com/idn/eGWh?vega",
          "format": {"type": "json"}
        },
        "transform": [{"calculate": "'Indonesia'", "as": "country"}],
        "mark": {"type": "line", "strokeWidth": 2}
      },
      {
        "data": {
          "url": "https://api.economicsobservatory.com/mex/eGWh?vega",
          "format": {"type": "json"}
        },
        "transform": [{"calculate": "'Mexico'", "as": "country"}],
        "mark": {"type": "line", "strokeWidth": 2}
      }
    ],
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {"title": "", "titleColor": "#122B39", "grid": false}
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {"title": "", "titleColor": "#122B39", "grid": false}
      },
      "color": {
        "field": "country",
        "type": "nominal",
        "scale": {
          "domain": ["Indonesia", "Mexico"],
          "range": ["#1f77b4", "#f4134d"]
        },
        "legend": {"title": "Country"}
      },
      "tooltip": [
        {
          "field": "date",
          "type": "temporal",
          "title": "Year",
          "timeUnit": "year"
        },
        {
          "field": "value",
          "type": "quantitative",
          "title": "Electricity"
        }
      ]
    }
  }