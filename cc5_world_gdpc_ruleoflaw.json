{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url":"https://raw.githubusercontent.com/ariefanwar07/ariefanwar07.github.oi/refs/heads/main/gdp_rol_pop_region.csv"},
    "transform": [
      {"filter":"year(datum.date)==Year & datum.rol_index>0"}
    ],
    "title": {
        "text": "The Economy and The Rule of Law",
        "anchor": "start",
        "subtitle": ["GDP per Capita (PPP USD constant), Source: World Bank","",""],
        "fontSize": 16,
        "subtitleFontSize": 12,
        "font": "Afacad Flux",
        "color": "rgb(117, 78, 153)",
        "subtitleColor": "#333333"
      },
    "width":300,
    "height":300,
    "mark": "circle",
    "params": [
      {
        "name": "Year",
        "value": 2019,
        "bind":{"input": "range", "min": 2013, "max": 2022, "step": 1}
      }
    ],
  
      "encoding": {
      "x": {
        "field": "gdp_pc",
        "axis":{
          "gridOpacity":0,
          "format":"$,d",
          "title":"GDP per capita",
          "font": "Afacad Flux"},
        "scale":{
          "domain":[0, 100000],
          "type":"linear"},
        "type":"quantitative"
        },
      "y": {
        "field": "rol_index",
        "title":"Rule of Law Index",
        "font": "Afacad Flux",
        "axis":{
            "gridOpacity":0,
            "labelExpr": "datum.value"
            },
        "scale":{
            "type":"linear",
            "domain": [0.02,1]
            },
        "type": "quantitative"
        
        },
      "size":{
        "field":"pop",
        "type": "quantitative",
        "title":"Population"
        },
      "color":{
        "field":"region"
        }
      }
      
  }
  
